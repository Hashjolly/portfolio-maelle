---
export interface Props {
  class?: string;
  padding?: boolean;
  shadow?: boolean;
  rounded?: boolean;
}

const { 
  class: className = '', 
  padding = true, 
  shadow = true, 
  rounded = true 
} = Astro.props;

const baseClasses = 'bg-white';
const paddingClass = padding ? 'p-6' : '';
const shadowClass = shadow ? 'shadow-sm hover:shadow-lg transition-shadow duration-200' : '';
const roundedClass = rounded ? 'rounded-2xl' : '';

const classes = `${baseClasses} ${paddingClass} ${shadowClass} ${roundedClass} ${className}`;
---

<div class={classes}>
  <slot />
</div>
