---
import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
import { siteData } from '@/data/site';
import { Mail, MapPin, Linkedin, Instagram, ExternalLink } from 'lucide-astro';
---

<footer class="bg-dark text-cream py-16">
  <Container>
    <div class="grid md:grid-cols-4 gap-8 mb-12">
      <!-- Brand -->
      <div class="md:col-span-2 scroll-reveal">
        <h3 class="font-display text-2xl font-bold mb-4 animate-fade-in">
          {siteData.name}
        </h3>
        <p class="text-cream/80 mb-6 leading-relaxed animate-fade-in delay-200">
          {siteData.description}
        </p>
        <div class="flex space-x-4">
          <a 
            href={siteData.social.linkedin} 
            target="_blank" 
            rel="noopener noreferrer"
            class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center hover:bg-primary hover:scale-110 transition-all duration-300 interactive-element"
            aria-label="LinkedIn"
          >
            <Linkedin class="w-5 h-5" />
          </a>
          <a 
            href={siteData.social.instagram} 
            target="_blank" 
            rel="noopener noreferrer"
            class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center hover:bg-primary hover:scale-110 transition-all duration-300 interactive-element"
            aria-label="Instagram"
          >
            <Instagram class="w-5 h-5" />
          </a>
        </div>
      </div>
      
      <!-- Navigation -->
      <div class="scroll-reveal delay-300">
        <h4 class="font-semibold mb-4 animate-fade-in">Navigation</h4>
        <ul class="space-y-2">
          <li>
            <a 
              href="/" 
              class="text-cream/80 hover:text-cream transition-all duration-300 hover:translate-x-2 inline-block interactive-element"
            >
              Accueil
            </a>
          </li>
          <li>
            <a 
              href="/parcours" 
              class="text-cream/80 hover:text-cream transition-all duration-300 hover:translate-x-2 inline-block interactive-element"
            >
              Parcours
            </a>
          </li>
          <li>
            <a 
              href="/projets" 
              class="text-cream/80 hover:text-cream transition-all duration-300 hover:translate-x-2 inline-block interactive-element"
            >
              Projets
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Contact -->
      <div class="scroll-reveal delay-500">
        <h4 class="font-semibold mb-4 animate-fade-in">Contact</h4>
        <div class="space-y-3">
          <a 
            href="mailto:maellelanglais10@hotmail.fr"
            class="flex items-center space-x-2 text-cream/80 hover:text-cream transition-all duration-300 group interactive-element"
          >
            <Mail class="w-4 h-4 group-hover:animate-bounce" />
            <span class="group-hover:translate-x-1 transition-transform duration-300">maellelanglais10@hotmail.fr</span>
          </a>
          <div class="flex items-center space-x-2 text-cream/80">
            <MapPin class="w-4 h-4 animate-pulse" />
            <span>La Rochelle, France</span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="border-t border-cream/20 pt-8 scroll-reveal delay-700">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-cream/60 text-sm animate-fade-in">
          © {new Date().getFullYear()} {siteData.name}. Tous droits réservés.
        </p>
        <div class="flex items-center space-x-6 mt-4 md:mt-0">
          <a 
            href="/mentions-legales" 
            class="text-cream/60 hover:text-cream text-sm transition-all duration-300 interactive-element"
          >
            Mentions légales
          </a>
          <a 
            href="https://github.com" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-cream/60 hover:text-cream text-sm transition-all duration-300 flex items-center space-x-1 interactive-element"
          >
            <span>Site réalisé avec Astro</span>
            <ExternalLink class="w-3 h-3" />
          </a>
        </div>
      </div>
    </div>
  </Container>
  
  <!-- Floating animation elements -->
  <div class="absolute bottom-10 left-10 w-6 h-6 bg-primary/30 rounded-full animate-float hidden lg:block"></div>
  <div class="absolute top-10 right-20 w-4 h-4 bg-atlantic/30 rounded-full animate-pulse hidden lg:block"></div>
</footer>

<style>
  footer {
    position: relative;
    overflow: hidden;
  }
  
  footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(219, 143, 117, 0.5), transparent);
  }
</style>
