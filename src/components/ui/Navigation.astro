---
import Container from '@/components/ui/Container.astro';
import { siteData } from '@/data/site';

export interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<nav class={`fixed top-0 w-full bg-cream/90 backdrop-blur-sm z-50 border-b border-sand-200 transition-all duration-300 nav-blur ${className}`}>
  <Container class="py-4">
    <div class="flex items-center justify-between">
      <a 
        href="/" 
        class="font-display font-bold text-xl text-primary hover:text-sand-600 transition-all duration-300 hover:scale-105 hover-glow interactive-element"
      >
        {siteData.name}
      </a>
      <div class="hidden md:flex items-center space-x-8">
        <a 
          href="/parcours" 
          class="text-dark hover:text-primary transition-all duration-300 hover:scale-105 hover-lift interactive-element"
        >
          Parcours
        </a>
        <a 
          href="/projets" 
          class="text-dark hover:text-primary transition-all duration-300 hover:scale-105 hover-lift interactive-element"
        >
          Projets
        </a>
        <a 
          href="mailto:maellelanglais10@hotmail.fr" 
          class="bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary/90 transition-all duration-300 btn-animate hover-lift"
        >
          Contact
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden text-dark hover:text-primary transition-all duration-300 interactive-element"
        aria-label="Menu mobile"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile menu -->
    <div 
      id="mobile-menu" 
      class="hidden md:hidden mt-4 pb-4 border-t border-sand-200"
    >
      <div class="flex flex-col space-y-4 pt-4">
        <a 
          href="/parcours" 
          class="text-dark hover:text-primary transition-all duration-300 interactive-element"
        >
          Parcours
        </a>
        <a 
          href="/projets" 
          class="text-dark hover:text-primary transition-all duration-300 interactive-element"
        >
          Projets
        </a>
        <a 
          href="mailto:maellelanglais10@hotmail.fr" 
          class="bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary/90 transition-all duration-300 btn-animate text-center"
        >
          Contact
        </a>
      </div>
    </div>
  </Container>
</nav>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        
        // Animation d'apparition
        if (!mobileMenu.classList.contains('hidden')) {
          mobileMenu.style.opacity = '0';
          mobileMenu.style.transform = 'translateY(-10px)';
          
          setTimeout(() => {
            mobileMenu.style.opacity = '1';
            mobileMenu.style.transform = 'translateY(0)';
            mobileMenu.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
          }, 10);
        }
      });
    }
  });
</script>
