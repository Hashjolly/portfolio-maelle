---
import Container from '@/components/ui/Container.astro';
import { siteData } from '@/data/site';

export interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<nav
  class={`fixed top-0 w-full bg-cream/90 backdrop-blur-sm z-50 border-b border-sand-200 transition-all duration-300 nav-blur ${className}`}
>
  <Container class="animate-fade-in py-4">
    <div class="flex items-center justify-between">
      <a
        href="/"
        class="hover-glow interactive-element animate-slide-up font-display text-xl font-bold text-primary transition-all duration-300 hover:scale-105 hover:text-sand-600"
      >
        {siteData.name}
      </a>
      <div class="hidden items-center space-x-8 md:flex">
        <a
          href="/parcours"
          class="hover-lift interactive-element animate-slide-up text-dark transition-all duration-300 hover:scale-105 hover:text-primary"
        >
          Parcours
        </a>
        <a
          href="/projets"
          class="hover-lift interactive-element animate-slide-up text-dark transition-all duration-300 hover:scale-105 hover:text-primary"
        >
          Projets
        </a>
        <a
          href="mailto:maellelanglais10@hotmail.fr"
          class="btn-animate hover-lift animate-scale-in rounded-lg bg-primary px-4 py-2 text-white transition-all duration-300 hover:bg-primary/90"
        >
          Contact
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="interactive-element animate-fade-in text-dark transition-all duration-300 hover:text-primary md:hidden"
        aria-label="Menu mobile"
      >
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="mt-4 hidden border-t border-sand-200 pb-4 md:hidden">
      <div class="flex flex-col space-y-4 pt-4">
        <a
          href="/parcours"
          class="interactive-element animate-slide-up text-dark transition-all duration-300 hover:text-primary"
        >
          Parcours
        </a>
        <a
          href="/projets"
          class="interactive-element animate-slide-up text-dark transition-all duration-300 hover:text-primary"
        >
          Projets
        </a>
        <a
          href="mailto:maellelanglais10@hotmail.fr"
          class="btn-animate rounded-lg bg-primary px-4 py-2 text-center text-white transition-all duration-300 hover:bg-primary/90"
        >
          Contact
        </a>
      </div>
    </div>
  </Container>
</nav>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');

        // Animation d'apparition
        if (!mobileMenu.classList.contains('hidden')) {
          mobileMenu.style.opacity = '0';
          mobileMenu.style.transform = 'translateY(-10px)';

          setTimeout(() => {
            mobileMenu.style.opacity = '1';
            mobileMenu.style.transform = 'translateY(0)';
            mobileMenu.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
          }, 10);
        }
      });
    }
  });
</script>
