---
export interface Props {
  class?: string;
  maxWidth?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '4xl' | '6xl' | '7xl' | 'full';
}

const { class: className = '', maxWidth = '7xl' } = Astro.props;

const maxWidthClasses = {
  sm: 'max-w-sm',
  md: 'max-w-md', 
  lg: 'max-w-lg',
  xl: 'max-w-xl',
  '2xl': 'max-w-2xl',
  '4xl': 'max-w-4xl',
  '6xl': 'max-w-6xl',
  '7xl': 'max-w-7xl',
  full: 'max-w-full'
};

const classes = `w-full ${maxWidthClasses[maxWidth]} mx-auto px-4 sm:px-6 lg:px-8 animate-fade-in ${className}`;
---

<div class={classes}>
  <slot />
</div>
