---
import Layout from '@/layouts/Layout.astro';
import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
import Button from '@/components/ui/Button.astro';
import { Home, Search, ArrowLeft } from 'lucide-astro';

const title = 'Page non trouvée - 404';
const description = 'La page que vous recherchez n\'existe pas ou a été déplacée.';
---

<Layout title={title} description={description} noindex>
  <div class="min-h-screen bg-gradient-to-br from-cream via-sand-50 to-sand-100 flex items-center">
    <Container>
      <div class="text-center">
        <!-- 404 Illustration -->
        <div class="mb-8">
          <div class="relative inline-block">
            <!-- Large 404 -->
            <h1 class="font-display text-8xl md:text-9xl font-bold text-sand-200 select-none">
              404
            </h1>
            <!-- Decorative elements -->
            <div class="absolute top-4 left-4 w-8 h-8 bg-primary/20 rounded-full animate-pulse"></div>
            <div class="absolute bottom-8 right-8 w-6 h-6 bg-atlantic/20 rounded-full animate-pulse delay-100"></div>
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-4 h-4 bg-salicornes/20 rounded-full animate-pulse delay-200"></div>
          </div>
        </div>

        <!-- Error Message -->
        <div class="mb-12">
          <h2 class="font-display text-3xl md:text-4xl font-bold text-dark mb-4">
            Oups ! Page introuvable
          </h2>
          <p class="text-xl text-dark/80 max-w-2xl mx-auto leading-relaxed">
            La page que vous recherchez n'existe pas, a été déplacée ou supprimée. 
            Peut-être avez-vous tapé une mauvaise adresse ?
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
          <Button href="/" variant="primary" size="lg">
            <Home class="w-5 h-5" />
            Retour à l'accueil
          </Button>
          <Button href="/projets" variant="outline" size="lg">
            <Search class="w-5 h-5" />
            Voir mes projets
          </Button>
        </div>

        <!-- Helpful Links -->
        <div class="bg-white p-8 rounded-2xl shadow-sm max-w-2xl mx-auto">
          <h3 class="font-display text-xl font-semibold text-dark mb-6">
            Vous cherchiez peut-être :
          </h3>
          
          <div class="grid sm:grid-cols-2 gap-4">
            <a 
              href="/parcours" 
              class="p-4 border border-sand-200 rounded-lg hover:border-primary hover:bg-primary/5 transition-colors text-left group"
            >
              <h4 class="font-semibold text-dark group-hover:text-primary transition-colors mb-1">
                Mon parcours
              </h4>
              <p class="text-dark/60 text-sm">
                Formation et expériences en géographie
              </p>
            </a>

            <a 
              href="/projets" 
              class="p-4 border border-sand-200 rounded-lg hover:border-primary hover:bg-primary/5 transition-colors text-left group"
            >
              <h4 class="font-semibold text-dark group-hover:text-primary transition-colors mb-1">
                Mes projets
              </h4>
              <p class="text-dark/60 text-sm">
                Réalisations en sensibilisation environnementale
              </p>
            </a>

            <a 
              href="/contact" 
              class="p-4 border border-sand-200 rounded-lg hover:border-primary hover:bg-primary/5 transition-colors text-left group"
            >
              <h4 class="font-semibold text-dark group-hover:text-primary transition-colors mb-1">
                Me contacter
              </h4>
              <p class="text-dark/60 text-sm">
                Discutons de votre projet
              </p>
            </a>
          </div>
        </div>

        <!-- Search Suggestion -->
        <div class="mt-12 text-center">
          <p class="text-dark/60 mb-4">
            Vous ne trouvez toujours pas ce que vous cherchez ?
          </p>
          <Button href="/contact" variant="outline">
            Contactez-moi directement
          </Button>
        </div>
      </div>
    </Container>
  </div>
</Layout>

<style>
  /* Custom animation for floating elements */
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
